cd third_party/libev
chmod +x configure &&
./configure &&
cd -

cd third_party/sqlite &&
autoreconf -ivf &&
chmod +x configure &&
./configure &&
cd -

cd third_party/curl &&
autoreconf -ivf &&
chmod +x configure &&
./configure --disable-shared --enable-static --with-ssl=yes --without-librtmp &&
cd -